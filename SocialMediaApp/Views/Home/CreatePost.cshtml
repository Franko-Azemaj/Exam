@model Post
<nav class="p-2 row bg-primary">

    <div class="col-sm-8"></div>
    <div class="col-sm-4">
        <a class="btn btn-primary border border-dark" href="/">All Users</a>
        <a class="btn btn-primary border border-dark" href="/professional_profile">MyProfile</a>
        <a class="btn btn-primary border border-dark" href="/logout">LogOut</a>
    </div>

</nav>
<div class="row">
    <h3 class="p-3 text-center">Create a Post</h3>

    <div class="col-sm-3"></div>

    <div class="col-sm-6">

        <form action="newPost" method="post">

            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <input asp-for="Description" class="form-control" />
                    <label class="form-label" asp-for="Description"></label>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>


            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
            </div>

        </form>
    </div>

    <div class="col-sm-3"></div>

</div>
